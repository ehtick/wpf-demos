                                    <ListBoxItem Margin="5">Bottom Right</ListBoxItem>
                                </ListBox>
                            </syncfusion:DropDownButton>
                        </syncfusion:RibbonBar>
                    </syncfusion:RibbonTab>
                </syncfusion:ContextTabGroup>
            </syncfusion:Ribbon.ContextTabGroups>
            <syncfusion:Ribbon.ModalTabCollection>
                <syncfusion:ModalTabCollection>
                    <syncfusion:RibbonTab
                        Name="printpreview"
                        Caption="Print Preview"
                        IsChecked="True">
                        <syncfusion:RibbonBar Header="Print">
                            <interactivity:Interaction.Triggers>
                                <interactivity:EventTrigger EventName="LauncherClick">
                                    <interactivity:InvokeCommandAction Command="local:RibbonCommand.ButtonCommand" />
                                </interactivity:EventTrigger>
                            </interactivity:Interaction.Triggers>
                            <syncfusion:RibbonButton
                                Command="local:RibbonCommand.ButtonCommand"
                                Label="Print"
                                IconTemplate="{StaticResource QuickPrint}"
                                SizeForm="Large" />
                        </syncfusion:RibbonBar>
                        <syncfusion:RibbonBar Header="Zoom">
                            <interactivity:Interaction.Triggers>
                                <interactivity:EventTrigger EventName="LauncherClick">
                                    <interactivity:InvokeCommandAction Command="local:RibbonCommand.ButtonCommand" />
                                </interactivity:EventTrigger>
                            </interactivity:Interaction.Triggers>
                            <syncfusion:RibbonButton
                            Command="local:RibbonCommand.ButtonCommand"
                            Label="Zoom"
                            SizeForm="Large" 
                            IconTemplate="{StaticResource Zoom}">
                            </syncfusion:RibbonButton>
                            <syncfusion:RibbonButton
                            Command="local:RibbonCommand.ButtonCommand"
                            Label="100%"
                            SizeForm="Large" 
                            IconTemplate="{StaticResource 100%}">
                            </syncfusion:RibbonButton>
                            <syncfusion:RibbonButton
                            HorizontalAlignment="Left"
                            Command="local:RibbonCommand.ButtonCommand"
                            Label="One Page"
                            SizeForm="Small" 
                            IconTemplate="{StaticResource OnePage}">
                            </syncfusion:RibbonButton>
                            <syncfusion:RibbonButton
                            HorizontalAlignment="Left"
                            Command="local:RibbonCommand.ButtonCommand"
                            Label="Two Pages"
                            SizeForm="Small"
                            IconTemplate="{StaticResource TwoPages}">
                            </syncfusion:RibbonButton>
                            <syncfusion:RibbonButton
                            HorizontalAlignment="Left"
                            Command="local:RibbonCommand.ButtonCommand"
                            Label="Page Width"
                            SizeForm="Small"
                            IconTemplate="{StaticResource PageWidth}"    >
                            </syncfusion:RibbonButton>
                        </syncfusion:RibbonBar>
                        <syncfusion:RibbonBar Header="Preview">
                            <interactivity:Interaction.Triggers>
                                <interactivity:EventTrigger EventName="LauncherClick">
                                    <interactivity:InvokeCommandAction Command="local:RibbonCommand.ButtonCommand" />
                                </interactivity:EventTrigger>
                            </interactivity:Interaction.Triggers>
                            <syncfusion:RibbonCheckBox Content="Show Ruler" />
                            <syncfusion:RibbonCheckBox Content="Magnifier" />
                            <syncfusion:RibbonButton
                                HorizontalAlignment="Left"
                                Command="local:RibbonCommand.ButtonCommand"
                                Label="Shrink on OnePage"
                                SizeForm="Small"
                                IconTemplate="{StaticResource PageWidth}" />
                            <syncfusion:RibbonButton
                                HorizontalAlignment="Left"
                                Command="local:RibbonCommand.ButtonCommand"
                                Label="Next Page"
                                SizeForm="Small"
                                IconTemplate="{StaticResource TwoPages}" />
                            <syncfusion:RibbonButton
                                HorizontalAlignment="Left"
                                Command="local:RibbonCommand.ButtonCommand"
                                Label="Previous Page"
                                SizeForm="Small"
                                IconTemplate="{StaticResource OnePage}" />
                            <syncfusion:RibbonSeparator />
                            <syncfusion:RibbonButton
                                Command="{Binding CloseModelTabCommand}"
                                Label="Close Print Preview"
                                IconTemplate="{StaticResource CloseTab}"
                                SizeForm="Large" />
                        </syncfusion:RibbonBar>
                    </syncfusion:RibbonTab>
                </syncfusion:ModalTabCollection>
            </syncfusion:Ribbon.ModalTabCollection>
        </syncfusion:Ribbon>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ListBox
                Name="itempreview"
                Width="210"
                HorizontalAlignment="Left"
                FocusManager.IsFocusScope="True"
                ItemTemplate="{StaticResource smallSlideTemplate}"
                ItemsSource="{Binding SlideItems}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectedIndex="1" />
            <Grid
                Name="mainslide"
                Grid.Column="1"
                Width="790"
                Height="459"
                Margin="10,10,20,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{Binding ElementName=formatShading, Path=Color, Converter={StaticResource ColorToBrushConverter}}"
                DataContext="{Binding ElementName=itempreview, Path=SelectedItem}"
                IsManipulationEnabled="False">
                <Image Margin="10" Source="/syncfusion.ribbondemos.wpf;component/Assets/Ribbon/template.png" />
                <StackPanel>
                    <RichTextBox
                        x:Name="titleEditor"
                        Width="500"
                        Margin="150,100,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        AllowDrop="True"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontFamily="Calibri"
                        FontSize="55"
                        Foreground="DarkBlue">
                        <FlowDocument Background="{Binding ElementName=highlightText, Path=Color, Converter={StaticResource ColorToBrushConverter}}">
                            <Paragraph TextAlignment="Center">
                                <Run Text="{Binding ItemText}" />
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <RichTextBox
                        x:Name="secondraryEditor"
                        Width="500"
                        Margin="150,20,5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        AllowDrop="True"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="15">
                        <FlowDocument Background="{Binding ElementName=highlightText, Path=Color, Converter={StaticResource ColorToBrushConverter}}" Foreground="{Binding ElementName=fontColor, Path=Color, Converter={StaticResource ColorToBrushConverter}}">
                            <Paragraph TextAlignment="Center">
                                <Run Text="{Binding Description}" />
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</syncfusion:RibbonWindow>
