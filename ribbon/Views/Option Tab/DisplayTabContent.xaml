<UserControl
    x:Class="syncfusion.ribbondemos.wpf.DisplayTabContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <StackPanel Margin="10" Orientation="Horizontal">
                <Image Source="/syncfusion.ribbondemos.wpf;component/Assets/Ribbon/Display.png" />
                <TextBlock VerticalAlignment="Center" Text="Change how document content is displayed on the screen" />
            </StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="5"
                    Background="LightGray"
                    Text="Page display options" />
                <Grid Margin="10,5,0,0">
                    <StackPanel>
                        <CheckBox
                            Margin="5"
                            Content="Show white spaces between pages in Print Layout view"
                            IsChecked="True" />
                        <CheckBox
                            Margin="5"
                            Content="Show highlighter marks"
                            IsChecked="True" />
                        <CheckBox
                            Margin="5"
                            Content="Show document tooltips on hover"
                            IsChecked="True" />
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="5"
                    Background="LightGray"
                    Text="Always show these formatting marks on the screen" />
                <Grid Margin="10,5,0,0">
                    <StackPanel>
                        <CheckBox Margin="5" Content="Tab characters" />
                        <CheckBox Margin="5" Content="Spaces" />
                        <CheckBox Margin="5" Content="Paragraph marks" />
                        <CheckBox Margin="5" Content="Hidden text" />
                        <CheckBox Margin="5" Content="Optional hyphens" />
                        <CheckBox
                            Margin="5"
                            Content="Object anchors"
                            IsChecked="True" />
                        <CheckBox Margin="5" Content="Show all formatiing marks" />
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="5"
                    Background="LightGray"
                    Text="Printing options" />
                <Grid Margin="10,5,0,0">
                    <StackPanel>
                        <CheckBox
                            Margin="5"
                            Content="Print drawings created in Word"
                            IsChecked="True" />
                        <CheckBox Margin="5" Content="Print background colors and images" />
                        <CheckBox Margin="5" Content="Print document properties" />
                        <CheckBox Margin="5" Content="Print hidden text" />
                        <CheckBox Margin="5" Content="Print fields before printing" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
