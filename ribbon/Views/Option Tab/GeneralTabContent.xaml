<UserControl
    x:Class="syncfusion.ribbondemos.wpf.GeneralTabContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <StackPanel Margin="10" Orientation="Horizontal">
                <Image Source="/syncfusion.ribbondemos.wpf;component/Assets/Ribbon/Display.png" />
                <TextBlock VerticalAlignment="Center" Text="General options for working with Word" />
            </StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="5"
                    Background="LightGray"
                    Text="Personalize your copy of Word" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Margin="5" Text="User Name:" />
                    <TextBox
                        Grid.Column="1"
                        Width="200"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Text="Syncfusion Software" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="5"
                        Text="Initials:" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="50"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Text="SS" />
                    <CheckBox
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Margin="5"
                        Content="Always use these values regardless of sign in to Word" />
                </Grid>
            </StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="5"
                    Background="LightGray"
                    Text="Attachment options" />
                <Grid>
                    <StackPanel>
                        <RadioButton
                            Margin="5"
                            Content="Ask me how I want to attach everytime"
                            IsChecked="True" />
                        <RadioButton Margin="5" Content="Always share them as links" />
                        <RadioButton Margin="5" Content="Always attach them as copies" />
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="LightGray"
                    Text="Start up options" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Margin="5" Text="For files I choose from OneDrive or SharePoint" />
                    <StackPanel Grid.Row="1">
                        <CheckBox
                            Margin="5"
                            Content="Tell me if Word isn't the default program for documents"
                            IsChecked="True" />
                        <CheckBox Margin="5" Content="Open e-mail attachments and other uneditable files in reading view" />
                        <CheckBox Margin="5" Content="Show the start screen when this application starts" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
