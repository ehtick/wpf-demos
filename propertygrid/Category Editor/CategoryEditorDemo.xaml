                                                    </Grid>
                                                </Viewbox>
                                            </ToggleButton.Content>
                                        </ToggleButton>
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="5"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <ToggleButton
                                            Margin="5"
                                            FontWeight="Bold"
                                            IsChecked="{Binding Path=CategoryValueProperties[TextAlignment].Value,
