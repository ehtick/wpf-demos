                            <syncfusion:CategoryEditorProperty Name="FontStyle" />
                            <syncfusion:CategoryEditorProperty Name="FontSize" />
                            <syncfusion:CategoryEditorProperty Name="FontWeight" />
                            <syncfusion:CategoryEditorProperty Name="TextAlignment" />
