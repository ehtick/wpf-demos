<democommon:DemoControl
    x:Class="syncfusion.olapclientdemos.wpf.CubeBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.olapclientdemos.wpf"
    xmlns:olapgrid="clr-namespace:Syncfusion.Windows.Grid.Olap;assembly=Syncfusion.OlapGrid.WPF"
    xmlns:sfshared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    Title="Cube Browser"
    sfshared:SkinStorage.VisualStyle="Metro"
	Background="White">

    <democommon:DemoControl.DataContext>
        <local:CubeBrowserViewModel />
    </democommon:DemoControl.DataContext>
    
    <Grid>
        <Border
            Margin="5"
            Padding="5"
            Background="#FFECEDED"
            BorderBrush="Gray"
            BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="75*" />
                </Grid.ColumnDefinitions>

                <Border
                    Margin="0,0,5,0"
                    BorderBrush="Gray"
                    BorderThickness="0.5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel>
                            <TextBlock
                                Height="20"
                                Margin="5,5,5,0"
                                FontWeight="SemiBold">
                                Select a Measure
                            </TextBlock>
                            <ComboBox
                                Name="cmb_Measure"
                                Height="25"
                                Margin="5"
                                ItemsSource="{Binding AvailableMeasures}"
                                SelectedIndex="0"
                                SelectedItem="{Binding SelectedMeasure, Mode=TwoWay}" />
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Top"
                                FontWeight="SemiBold">
                                Dimension
                            </TextBlock>
                            <ListBox
                                Name="DimensionList"
                                Grid.Row="1"
                                Margin="5"
                                VerticalAlignment="Stretch"
                                ItemsSource="{Binding AvailableDimensions}"
                                SelectedItem="{Binding SelectedDimension, Mode=TwoWay}"
                                SelectionMode="Single" />
                        </Grid>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Margin="5,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35*" />
                        <RowDefinition Height="65*" />
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*" />
                            <ColumnDefinition Width="30*" />
                            <ColumnDefinition Width="30*" />
                        </Grid.ColumnDefinitions>

                        <Border BorderBrush="Gray" BorderThickness="0.5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Margin="5"
                                    FontWeight="SemiBold">
                                    Categorical Axis
                                </TextBlock>

                                <StackPanel
                                    Grid.Row="1"
                                    Margin="5"
                                    Orientation="Horizontal">
                                    <Button
                                        Name="btnColMeasure"
                                        Height="20"
                                        Margin="0,2,0,2"
                                        Command="{Binding ColMeasureClick}"
                                        CommandParameter="{Binding ElementName=btnColMeasure, Path=Name}">
                                        + Measure
                                    </Button>
                                    <Button
                                        Name="btnColDimension"
                                        Height="20"
                                        Margin="2,2,0,2"
                                        Command="{Binding DimensionClick}"
                                        CommandParameter="{Binding ElementName=btnColDimension, Path=Name}">
                                        + Dimension
                                    </Button>
                                    <Button
                                        Name="btnColRemove"
                                        Height="20"
                                        Margin="2,2,0,2"
                                        Command="{Binding ColRemoveClick}"
                                        CommandParameter="{Binding ElementName=btnColRemove, Path=Name}">
                                        Remove
                                    </Button>
                                </StackPanel>

                                <ListBox
                                    Name="Column"
                                    Grid.Row="2"
                                    Margin="5"
                                    ItemsSource="{Binding ColumnItems, Mode=TwoWay}"
                                    SelectedItem="{Binding SelectedColumnItem}"
                                    SelectionMode="Single" />
                            </Grid>
                        </Border>

                        <Border
                            Grid.Column="1"
                            BorderBrush="Gray"
                            BorderThickness="0,0.5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock Margin="5" FontWeight="SemiBold">
                                    Series Axis
                                </TextBlock>

                                <StackPanel
                                    Grid.Row="1"
                                    Margin="5"
                                    Orientation="Horizontal">
                                    <Button
                                        Name="btnRowMeasure"
                                        Height="20"
                                        Margin="0,2,0,2"
                                        Command="{Binding RowMeasureClick}"
                                        CommandParameter="{Binding ElementName=btnRowMeasure, Path=Name}">
                                        + Measure
                                    </Button>
                                    <Button
                                        Name="btnRowDimension"
                                        Height="20"
                                        Margin="2,2,0,2"
                                        Command="{Binding DimensionClick}"
                                        CommandParameter="{Binding ElementName=btnRowDimension, Path=Name}">
                                        + Dimension
                                    </Button>
                                    <Button
                                        Name="btnRowRemove"
                                        Height="20"
                                        Margin="2,2,0,2"
                                        Command="{Binding RowRemoveClick}"
                                        CommandParameter="{Binding ElementName=btnRowRemove, Path=Name}">
                                        Remove
                                    </Button>
                                </StackPanel>

                                <ListBox
                                    Name="Row"
                                    Grid.Row="2"
                                    Margin="5"
                                    ItemsSource="{Binding RowItems, Mode=TwoWay}"
                                    SelectedItem="{Binding SelectedRowItem}"
                                    SelectionMode="Single" />
                            </Grid>
                        </Border>

                        <Border
                            Grid.Column="2"
                            BorderBrush="Gray"
                            BorderThickness="0.5">
                            <Grid Margin="0,0,2,0" VerticalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock Margin="5" FontWeight="SemiBold">
                                    Slicer Axis
                                </TextBlock>

                                <StackPanel
                                    Grid.Row="1"
                                    Margin="5"
                                    Orientation="Horizontal">
                                    <Button
                                        Name="btnSliceMeasure"
                                        Height="20"
                                        Margin="0,2,0,2"
                                        Command="{Binding SlicerMeasureClick}"
                                        CommandParameter="{Binding ElementName=btnSliceMeasure, Path=Name}">
                                        + Measure
                                    </Button>
                                    <Button
                                        Name="btnSliceDimension"
                                        Height="20"
                                        Margin="2,2,0,2"
                                        Command="{Binding DimensionClick}"
                                        CommandParameter="{Binding ElementName=btnSliceDimension, Path=Name}">
                                        + Dimension
                                    </Button>
                                    <Button
                                        Name="btnSliceRemove"
                                        Height="20"
                                        Margin="2,2,0,2"
                                        Command="{Binding SlicerRemoveClick}"
                                        CommandParameter="{Binding ElementName=btnSliceRemove, Path=Name}">
                                        Remove
                                    </Button>
                                </StackPanel>

                                <ListBox
                                    Name="Slicer"
                                    Grid.Row="2"
                                    Margin="5"
                                    ItemsSource="{Binding SlicerItems, Mode=TwoWay}"
                                    SelectedItem="{Binding SelectedSlicerItem}"
                                    SelectionMode="Single" />
                            </Grid>
                        </Border>
                    </Grid>

                    <GridSplitter
                        Height="1"
                        VerticalAlignment="Bottom"
                        Background="#FF119EDA"
                        ResizeDirection="Rows" />

                    <Grid Grid.Row="1" Margin="0,5,0,0">
                        <olapgrid:OlapGrid Name="olapGrid" OlapDataManager="{Binding GridDataManager}" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</democommon:DemoControl>
