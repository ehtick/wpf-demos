<Window
    x:Class="syncfusion.olapclientdemos.wpf.AddControlWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add Control Dialog"
    Width="400"
    Height="195"
    Icon="..\Assets\olapclient\AddTitleIcon.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.265*" />
            <ColumnDefinition Width="0.252*" />
            <ColumnDefinition Width="0.236*" />
            <ColumnDefinition Width="0.247*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.200*" />
            <RowDefinition Height="0.250*" />

            <RowDefinition Height="0.220*" />
            <RowDefinition Height="0.220*" />

            <RowDefinition Height="0.270*" />
        </Grid.RowDefinitions>

        <!--  Dialog Image  -->
        <Image
            Grid.RowSpan="2"
            Margin="10"
            HorizontalAlignment="Center"
            Source="{StaticResource AddIcon}" />

        <!--  Dialog inside description Text  -->
        <TextBlock
            Grid.Column="1"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            FontWeight="Bold"
            Text="Add a Control"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="0,0,10,0"
            VerticalAlignment="Top"
            Text="Add this control to the Dashboard surface. "
            TextWrapping="Wrap" />

        <!--  TileView Item Header  -->
        <TextBlock
            Grid.Row="2"
            Margin="13,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="Tile Header:"
            TextWrapping="Wrap" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="{Binding TileHeader, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Report Location  -->
        <TextBlock
            Grid.Row="3"
            Margin="13,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="Report Location:"
            TextWrapping="Wrap" />
        <ComboBox
            x:Name="reportFile"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            DisplayMemberPath="ReportName"
            ItemsSource="{Binding CurrentCollection}"
            SelectedItem="{Binding Path=ReportLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Button
            Grid.Row="4"
            Grid.Column="2"
            Command="{Binding AddCommand}"
            Style="{StaticResource AddButtonStyle}" />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            MinWidth="75"
            MinHeight="24"
            Margin="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding CloseCommand}"
            Content="Cancel" />
    </Grid>
</Window>
