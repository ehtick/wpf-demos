                </syncfusion:TreeViewItemAdv>
                <syncfusion:TreeViewItemAdv
                    Header="App.xaml"
                    IsExpanded="True"
                    LeftImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Xaml.png">
