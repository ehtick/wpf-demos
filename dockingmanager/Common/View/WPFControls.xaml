                TextAlignment="Center"
                TextWrapping="Wrap" />
        </syncfusion:GroupBarItem>
        <syncfusion:GroupBarItem
            BorderBrush="Transparent"
            HeaderText="Containers"
            IsExpanded="True">
            <syncfusion:GroupView Background="Transparent">
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/pointer.png" Text="Pointer" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Canvas.png" Text="Canvas" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/DockPanel.png" Text="DockPanel" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/StackPanel.png" Text="StackPanel" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/WrapPanel.png" Text="WrapPanel" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Grid.png" Text="Grid" />
            </syncfusion:GroupView>
        </syncfusion:GroupBarItem>
        <syncfusion:GroupBarItem
            BorderBrush="Transparent"
            HeaderText="Controls"
            IsExpanded="True">
            <syncfusion:GroupView>
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/pointer.png" Text="Pointer" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Border.png" Text="Border" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Button.png" Text="Button" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/CheckBox.png" Text="CheckBox" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Combobox.png" Text="Combobox" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/ContentControl.png" Text="ContentControl" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/DocumentViewer.png" Text="DocumentViewer" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Ellipse.png" Text="Ellipse" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Expander.png" Text="Expander" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Frame.png" Text="Frame" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/GridSplitter.png" Text="GridSplitter" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/GroupBox.png" Text="GroupBox" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Label.png" Text="Label" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Listbox.png" Text="Listbox" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Listview.png" Text="Listview" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/MediaElement.png" Text="MediaElement" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/Menu.png" Text="Menu" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/PasswordBox.png" Text="PasswordBox" />
                <syncfusion:GroupViewItem ImageSource="/syncfusion.dockingmanagerdemos.wpf;component/Assets/DockingManager/ProgressBar.png" Text="ProgressBar" />
