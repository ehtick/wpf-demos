<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.RadarChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
     xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">
    
    <democommon:DemoControl.DataContext>
        <local:PolarChartViewModel />
    </democommon:DemoControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../../Resources/ColorModel.xaml" />
                    <ResourceDictionary Source="/syncfusion.demoscommon.wpf;component/Views/DemoWindowStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <chart:SfChart x:Name="RadarChart" ColorModel="{StaticResource PolarPalette}" Palette="Custom"
            Margin="5" Grid.Column="0">

            <chart:SfChart.Header>
                <TextBlock TextAlignment="Center" Text="Plant Analysis" FontSize="17" Margin="0,10,0,0"/>
            </chart:SfChart.Header>

            <chart:SfChart.Legend>
                <chart:ChartLegend IconHeight="12.5" IconWidth="12.5" FontSize="14" Padding="5,0,0,10" ToggleSeriesVisibility="True"/>
            </chart:SfChart.Legend>

            <chart:SfChart.PrimaryAxis>
                <chart:CategoryAxis  EdgeLabelsDrawingMode="Fit" IsHitTestVisible="False"
                                TickLineSize="10" PolarAngle="{Binding ElementName=angleModeCombo, Path=SelectedItem}">
                    <chart:CategoryAxis.LabelStyle>
                        <chart:LabelStyle FontSize="12.5"/>
                    </chart:CategoryAxis.LabelStyle>
                </chart:CategoryAxis>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis SmallTickLineSize="6" LabelFormat="0'%"
                               SmallTicksPerInterval="5" TickLineSize="10" PolarAngle="{Binding ElementName=angleModeCombo, Path=SelectedItem}">
                    <chart:NumericalAxis.LabelStyle>
                        <chart:LabelStyle FontSize="12.5"/>
                    </chart:NumericalAxis.LabelStyle>
                </chart:NumericalAxis>
            </chart:SfChart.SecondaryAxis>

            <chart:RadarSeries ItemsSource="{Binding RadarData}" DrawType="{Binding ElementName=drawTypeCombo, Path=SelectedItem}" 
                          XBindingPath="Direction" LegendIcon="Circle" YBindingPath="Tree" Label="Tree" />

            <chart:RadarSeries ItemsSource="{Binding RadarData}" DrawType="{Binding ElementName=drawTypeCombo, Path=SelectedItem}" 
                     XBindingPath="Direction" LegendIcon="Circle" YBindingPath="Weed" Label="Weed"/>

            <chart:RadarSeries ItemsSource="{Binding RadarData}" DrawType="{Binding ElementName=drawTypeCombo, Path=SelectedItem}" 
                LegendIcon="Circle" XBindingPath="Direction" YBindingPath="Flower" Label="Flower"/>
        </chart:SfChart>

        <Border Style="{StaticResource BorderStyle}" BorderThickness="1.5,0,0,0" Grid.Column="1">
            <StackPanel Margin="10,14">
                <TextBlock FontSize="16" Text="OPTIONS" HorizontalAlignment="Center"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="DrawType" VerticalAlignment="Center" Margin="0,13,0,0" Grid.Column="0" FontSize="14"/>

                    <syncfusion:ComboBoxAdv x:Name="drawTypeCombo" ItemsSource="{democommon:EnumValuesExtension Type=chart:ChartSeriesDrawType}"
                  Margin="0,13,0,0" Grid.Column="1" VerticalAlignment="Center" 
                  Width="130" FontSize="13" Padding="5" SelectedIndex="0">
                    </syncfusion:ComboBoxAdv>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Angle" VerticalAlignment="Center" Margin="0,13,0,0" Grid.Column="0" FontSize="14"/>

                    <syncfusion:ComboBoxAdv x:Name="angleModeCombo" ItemsSource="{democommon:EnumValuesExtension Type=chart:ChartPolarAngle}"
                  Margin="0,13,0,0" Grid.Column="1" VerticalAlignment="Center" 
                  Width="130" FontSize="13" Padding="5" SelectedIndex="3">
                    </syncfusion:ComboBoxAdv>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</democommon:DemoControl>
