<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.RatingDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <democommon:DemoControl.Options>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="0,5,0,0"
                FontWeight="Bold"
                Text="Precision" />
            <ComboBox
                Name="precisionComboBox"
                Grid.Row="1"
                Height="22"
                Margin="0,5,0,0"
                VerticalAlignment="Top"
                SelectedItem="Standard">
                <system:String>Exact</system:String>
                <system:String>Standard</system:String>
                <system:String>Half</system:String>
            </ComboBox>
        </Grid>
    </democommon:DemoControl.Options>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            x:Name="title"
            Width="300"
            HorizontalAlignment="Left"
            Content="Movie Rating"
            FontSize="14"
            FontWeight="Medium" />
        <Grid x:Name="mainGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Image
                x:Name="movieImage"
                Width="150"
                Height="150"
                Source="/syncfusion.demoscommon.wpf;component/Assets/Movie/movie.png"
                Stretch="Fill" />
            <StackPanel
                x:Name="descStack"
                Grid.Column="1"
                Margin="0,0,0,10"
                Orientation="Vertical">
                <Label
                    Margin="3,0,0,0"
                    HorizontalAlignment="Left"
                    Content="The Walk ( 2015 )"
                    FontSize="14"
                    FontWeight="Medium" />
                <Label
                    x:Name="time"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    Content="PG | 2h 20min"
                    FontSize="10" />
                <TextBlock
                    x:Name="description"
                    Margin="10,5,5,5"
                    HorizontalAlignment="Left"
                    FontSize="12"
                    TextWrapping="Wrap">
                    In 1973, French street performer Philippe Petit is trying to make a living in Paris with juggling acts and wire walking, much to the chagrin of his father. During one performance, he eats a hard candy which was given to him by an audience member and injures his tooth.
                </TextBlock>
            </StackPanel>
        </Grid>
        <Label
            Grid.Row="2"
            Margin="0,20,0,5"
            HorizontalAlignment="Left"
            Content="Feedback"
            FontSize="14"
            FontWeight="Medium" />
        <Syncfusion:SfRating
            x:Name="rating"
            Grid.Row="3"
            Padding="4"
            ItemsCount="5"
            Precision="{Binding SelectedItem, ElementName=precisionComboBox}"
            Value="3" />
    </Grid>

</democommon:DemoControl>
