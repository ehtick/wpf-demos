<democommon:DemoControl
    x:Class="syncfusion.editordemos.wpf.ColorEditDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.editordemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="Auto"
    Height="Auto"
    FontFamily="Calibri"
    mc:Ignorable="d">

    <democommon:DemoControl.DataContext>
        <local:ColorEditViewModel />
    </democommon:DemoControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Margin="4">
            <WrapPanel Name="InnerGrid">
                <StackPanel
                    x:Name="stackPanel"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                        Name="header1"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontWeight="SemiBold"
                        Text="Default"
                        TextAlignment="Center" />

                    <syncfusion:ColorEdit
                        x:Name="ColorEdit1"
                        Width="300"
                        Height="242"
                        Brush="{Binding Brush1, Mode=TwoWay}"
                        EnableToolTip="True"
                        InvertColor="{Binding InvertColor1, Mode=TwoWay}" />

                    <TextBlock
                        Name="textblock1"
                        Grid.Row="1"
                        Width="110"
                        Height="70"
                        Margin="0,40,0,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{Binding Brush1}"
                        FontSize="50"
                        Text="a"
                        TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding InvertColor1}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>

                <StackPanel
                    x:Name="stackPanel1"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <TextBlock
                        Name="header3"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontWeight="SemiBold"
                        Text="LinearGradient Color Editor"
                        TextAlignment="Center" />

                    <syncfusion:ColorEdit
                        x:Name="ColorEdit3"
                        Width="300"
                        Height="242"
                        Brush="{Binding Brush3, Mode=TwoWay}"
                        BrushMode="Gradient"
                        EnableToolTip="True"
                        InvertColor="{Binding InvertColor3, Mode=TwoWay}" />

                    <TextBlock
                        Name="textblock3"
                        Grid.Row="1"
                        Width="110"
                        Height="70"
                        Margin="0,40,0,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="{Binding Brush3}"
                        FontSize="50"
                        Text="a"
                        TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding InvertColor3}" />
                        </TextBlock.Foreground>
                    </TextBlock>

                </StackPanel>

                <StackPanel
                    x:Name="stackPanel2"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <TextBlock
                        Name="header4"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        FontWeight="SemiBold"
                        Text="RadialGradient Color Editor"
                        TextAlignment="Center" />

                    <syncfusion:ColorEdit
                        x:Name="ColorEdit4"
                        Width="300"
                        Height="242"
                        Brush="{Binding Brush4, Mode=TwoWay}"
                        BrushMode="Gradient"
                        EnableToolTip="True"
                        InvertColor="{Binding InvertColor4, Mode=TwoWay}" />

                    <TextBlock
                        Name="textblock4"
                        Grid.Row="1"
                        Width="110"
                        Height="70"
                        Margin="0,40,0,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="{Binding Brush4}"
                        FontSize="50"
                        Text="a"
                        TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding InvertColor4}" />
                        </TextBlock.Foreground>
                    </TextBlock>


                </StackPanel>
            </WrapPanel>
        </Border>
    </ScrollViewer>

</democommon:DemoControl>
