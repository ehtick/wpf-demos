<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.FloatingCells"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">

            <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <syncfusion:GridControl x:Name="grid"  />
            </ScrollViewer>
    <democommon:DemoControl.Options>
        <StackPanel Orientation="Vertical">
            <CheckBox x:Name="floatingcells"
                              Margin="5"
                              Click="floatingcells_Click"
                              Content="Enable Floating Cell"
                              IsChecked="True" />
        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
