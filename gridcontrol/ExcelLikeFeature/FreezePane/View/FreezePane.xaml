<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.FreezePane"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">
    <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid"  />
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <Button Name="button1" Height="20" VerticalAlignment="Top"
                        Margin="3"
                        Command="{Binding FreezePaneCommand}"
                        Content="Freeze Current Row/Col" />
    </democommon:DemoControl.Options>
</democommon:DemoControl>
