<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.HiddenRowColumnResizing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">

    <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="gridControl"/>
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <Button Click="Button_Click" Height="20" VerticalAlignment="Top" Content="Hide Rows and Columns" />
    </democommon:DemoControl.Options>
</democommon:DemoControl>
