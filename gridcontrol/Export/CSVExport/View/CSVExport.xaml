<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.CSVExport"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">

    <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="gc" />
    </ScrollViewer>
    <democommon:DemoControl.Options>

        <StackPanel>
            <Button x:Name="selExport"
                            Margin="5"
                            Click="selExport_Click"
                            Content="Export Selected Ranges" />
            <Button x:Name="fullExport"
                            Margin="5"
                            Click="fullExport_Click"
                            Content="Export Whole Grid" />
        </StackPanel>
        </democommon:DemoControl.Options>
</democommon:DemoControl>