<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.ResizeToFit"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">


    <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid"  />
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <StackPanel>
            <Button Margin="5"
                            Click="Button_Click"
                            Content="ColumnWidth - AutoFit" />
            <Button Margin="5"
                            Click="Button_Click_1"
                            Content="RowHeigths - AutoFit" />
        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
