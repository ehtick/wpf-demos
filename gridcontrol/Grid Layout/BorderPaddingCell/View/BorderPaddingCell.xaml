<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.BorderPaddingCell"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">

    <ScrollViewer Background="Orange"
                          CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="grid" />
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <WrapPanel>
            <StackPanel>
                <TextBlock Margin="5"
                               Text="By selecting range of cells, you can customize the Border Style"
                               TextWrapping="Wrap" />
                <RadioButton Name="Dot"
                                 Margin="5"
                                 Click="BorderOptions_Click"
                                 Content="Dot Border" />
                <RadioButton Name="Dash"
                                 Margin="5"
                                 Click="BorderOptions_Click"
                                 Content="Dash Border" />
                <RadioButton Name="DashDot"
                                 Margin="5"
                                 Click="BorderOptions_Click"
                                 Content="DashDot Border" />
                <RadioButton Name="DashDotDot"
                                 Margin="5"
                                 Click="BorderOptions_Click"
                                 Content="DashDotDot Border" />
            </StackPanel>

            <StackPanel>
                <TextBlock Margin="5"
                               Text="By selecting range of cells, you can customize the Border Padding"
                               TextWrapping="Wrap" />
                <RadioButton Name="Top"
                                 Margin="5"
                                 Click="RadioButton_Click"
                                 Content="Top Padding" />
                <RadioButton Name="Left"
                                 Margin="5"
                                 Click="RadioButton_Click"
                                 Content="Left Padding" />
                <RadioButton Name="Right"
                                 Margin="5"
                                 Click="RadioButton_Click"
                                 Content="Right Padding" />
                <RadioButton Name="Bottom"
                                 Margin="5"
                                 Click="RadioButton_Click"
                                 Content="Bottom Padding" />
                <Slider Name="slider"
                            Maximum="10"
                            Minimum="0"
                            ValueChanged="Slider_ValueChanged" />
            </StackPanel>
        </WrapPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
