<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.DeferredScrolling"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">

    <ScrollViewer Name="scrollViewer"
                          CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
        <syncfusion:GridControl x:Name="gridControl1" />
    </ScrollViewer>

    <democommon:DemoControl.Options>
        <StackPanel>
            <CheckBox x:Name="Deferered"
                              Margin="5"
                              Checked="Deferered_Unchecked"
                              Content="IsDefereredScrolling"
                              IsChecked="True"
                              Unchecked="Deferered_Unchecked" />
        </StackPanel>
    </democommon:DemoControl.Options>
</democommon:DemoControl>
