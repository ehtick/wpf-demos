<democommon:DemoControl
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf" x:Class="syncfusion.gridcontroldemos.wpf.VirtualGrid"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:Behavior="clr-namespace:syncfusion.gridcontroldemos.wpf"
                             xmlns:Interactivity="http://schemas.microsoft.com/xaml/behaviors"
                             xmlns:local="clr-namespace:syncfusion.gridcontroldemos.wpf"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             Background="White">


    <Grid>
        <ScrollViewer CanContentScroll="True"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
            <syncfusion:GridControl x:Name="grid">
                <Interactivity:Interaction.Behaviors>
                    <local:VirtualGridQueryCellInfoBehavior />
                    <local:VirtualGridQueryCellInfoBehavior />
                </Interactivity:Interaction.Behaviors>
            </syncfusion:GridControl>
        </ScrollViewer>
    </Grid>
</democommon:DemoControl>
