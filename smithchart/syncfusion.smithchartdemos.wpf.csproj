<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <AssemblyName>syncfusion.smithchartdemos.wpfapplication</AssemblyName>
    <RootNamespace>syncfusion.smithchartdemos.wpf</RootNamespace>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net9.0-windows' ">
   <RuntimeHostConfigurationOption Include="Switch.System.Windows.Controls.DisableDynamicResourceOptimization" Value="true" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\common\syncfusion.demoscommon.wpf_lib.csproj" />
    <ProjectReference Include="syncfusion.smithchartdemos.wpf_lib.csproj" />
    <Reference Include="Syncfusion.SfSmithChart.WPF">
      <HintPath>$(SyncfusionInstallLocation)\precompiledassemblies\$(TargetFramework)\Syncfusion.SfSmithChart.WPF.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETFRAMEWORK' ">
      <Reference Include="Microsoft.CSharp" />
      <Reference Include="System.Data.DataSetExtensions" />
      <Reference Include="System.Net.Http" />
  </ItemGroup>
  
  <ItemGroup>
    <Page Remove="Views\*" />
    <Compile Remove="Views\*" />
    <Compile Remove="ViewModel\*" />
    <Compile Remove="Model\*" />
    <Compile Remove="SmithChartDemosViewModel.cs"/>
  </ItemGroup>

  <Import Project="..\common\demos.common.props" />
  <Import Project="..\targets\MultiTargeting.targets" />

</Project>