    <democommon:DemoControl.DataContext>
        <viewmodel:SmartMindMapViewModel/>
    </democommon:DemoControl.DataContext>
    <democommon:DemoControl.Resources>

        <!--Style for Connector-->
        <Style TargetType="syncfusion:Connector">
            <Setter Property="ConnectorGeometryStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Stroke" Value="Black" />
                        <Setter Property="StrokeThickness" Value="1" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="TargetDecoratorStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Stroke" Value="#4f4f4f"  />
                        <Setter Property="Stretch" Value="Fill" />
                        <Setter Property="Fill" Value="#4f4f4f"  />
                        <Setter Property="StrokeThickness" Value="1" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Style for Node-->
        <Style TargetType="syncfusion:Node">
            <Setter Property="Annotations" Value="{x:Null}"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
   
        </Style>

        <Style TargetType="syncfusion:AnnotationEditor">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="WrapText" Value="WrapWithOverflow"/>
        </Style>

        <Style TargetType="syncfusion:QuickCommand">
            <Setter Property="ShapeStyle">
                <Setter.Value>
                    <Style TargetType="Path" x:Name="Style">
                        <Setter Property="Fill"  Value="#434343"/>
                        <Setter Property="Stretch" Value="Fill"/>
                        <Setter Property="Stroke" Value="#FFFFFF"/>
                        <Setter Property="StrokeThickness" Value="1"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        
    </democommon:DemoControl.Resources>
    <Grid>
        <!-- Diagram and Controls Container -->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
