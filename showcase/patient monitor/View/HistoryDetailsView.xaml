<UserControl
    x:Class="syncfusion.patientmonitor.wpf.HistoryDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    xmlns:charts="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:patientDetailsDemo="clr-namespace:syncfusion.patientmonitor.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    skin:SfSkinManager.VisualStyle="MaterialLight"
    mc:Ignorable="d">

    <UserControl.Resources>
        <patientDetailsDemo:TextConverter x:Key="textConverter" />

        <DataTemplate x:Key="labelTemplate">
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="12"
                    Text="{Binding Converter={StaticResource textConverter}, ConverterParameter=0}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="{Binding Converter={StaticResource textConverter}, ConverterParameter=1}" />
            </StackPanel>
        </DataTemplate>
        <SolidColorBrush x:Key="YAxisLabelBackground" Color="#FF676767" />
        <SolidColorBrush x:Key="XAxisLabelBackground" Color="#FF85C775" />
        <Style x:Key="majorTickStyle" TargetType="Line">
            <Setter Property="StrokeThickness" Value="0.5" />
        </Style>
        <Style x:Key="lineStyle2" TargetType="Line">
            <Setter Property="StrokeThickness" Value="0.5" />
            <Setter Property="Stroke" Value="White" />
        </Style>
        <Style x:Key="labelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="3,0,3,0" />
        </Style>


        <Style x:Key="trackerLineStyle" TargetType="Line">
            <Setter Property="Stroke" Value="#FFF4B06D" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <Style x:Key="tickLineStyle" TargetType="Line">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
        <DataTemplate x:Key="yAxisTemplate">
            <TextBlock
                Margin="2"
                FontSize="11"
                Foreground="White"
                Text="{Binding LabelContent}" />
        </DataTemplate>
        <DataTemplate x:Key="yAxisTempTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White" Text="{Binding LabelContent}" />
                <TextBlock
                    Margin="0,0,2,0"
                    VerticalAlignment="Top"
                    FontSize="5"
                    Text="o" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="yAxisMPHTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White" Text="{Binding LabelContent}" />
                <TextBlock
                    Margin="0,0,2,0"
                    VerticalAlignment="Top"
                    Foreground="White"
                    Text=" mph" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="yAxisPerTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="White" Text="{Binding LabelContent}" />
                <TextBlock
                    Margin="0,0,2,0"
                    VerticalAlignment="Top"
                    Text="%" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="customLabel">
            <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                <Rectangle
                    Width="4"
                    VerticalAlignment="Stretch"
                    Fill="#FFA1C03A" />

                <Border Margin="0,0,-1,0" Background="#FFF4F4F5">
                    <StackPanel
                        Margin="10,5,10,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontFamily="Global User Interface"
                            FontSize="12"
                            Foreground="#FF3A3A3A"
                            Text="{Binding Value1}" />
                        <TextBlock
                            VerticalAlignment="Top"
                            FontFamily="Global User Interface"
                            FontSize="8"
                            Foreground="#FF3A3A3A"
                            Text="o" />
                        <TextBlock
                            FontFamily="Global User Interface"
                            FontSize="12"
                            Foreground="#FF3A3A3A"
                            Text="F / " />
                        <TextBlock
                            FontFamily="Global User Interface"
                            FontSize="12"
                            Foreground="#FF3A3A3A"
                            Text="{Binding Value2}" />
                        <TextBlock
                            VerticalAlignment="Top"
                            FontFamily="Global User Interface"
                            FontSize="8"
                            Foreground="#FF3A3A3A"
                            Text="o" />
                    </StackPanel>
                </Border>
                <Path
                    Width="15"
                    Height="15"
                    VerticalAlignment="Top"
                    Data="M19.5625,19.8125 L-0.124504,0.125496 L19.563,0.125496"
                    Fill="#FFF4F4F5"
                    Stretch="Uniform"
                    UseLayoutRounding="False">
                    <Path.RenderTransform>
                        <ScaleTransform CenterX="5" ScaleX="-1" />
                    </Path.RenderTransform>
                </Path>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="trackBallLabel">
            <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                <Rectangle
                    Width="4"
                    VerticalAlignment="Stretch"
                    Fill="{Binding Interior}" />
                <Border Margin="0,0,-1,0" Background="#FFF4F4F5">
                    <StackPanel
                        Margin="10,5,10,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontFamily="Global User Interface"
                            FontSize="12"
                            Foreground="#FF3A3A3A"
                            Text="{Binding ValueY}" />
                    </StackPanel>
                </Border>
                <Path
                    Width="15"
                    Height="15"
                    VerticalAlignment="Top"
                    Data="M19.5625,19.8125 L-0.124504,0.125496 L19.563,0.125496"
                    Fill="#FFF4F4F5"
                    Stretch="Uniform"
                    UseLayoutRounding="False">
                    <Path.RenderTransform>
                        <ScaleTransform CenterX="5" ScaleX="-1" />
                    </Path.RenderTransform>
                </Path>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="xLabel">
            <Grid Margin="0,-10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="1"
                    Margin="0,-3,0,0"
                    BorderBrush="DarkOrange"
                    BorderThickness="1">
                    <StackPanel Background="#FFF7F8F9">
                        <TextBlock
                            Margin="5,7,5,0"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Foreground="#FFABC158"
                            Text="{Binding ValueX, Converter={StaticResource textConverter}, ConverterParameter=0}" />
                        <TextBlock
                            Margin="5,0,5,1"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            Foreground="#FFABC158"
                            Text="{Binding ValueX, Converter={StaticResource textConverter}, ConverterParameter=1}" />
                    </StackPanel>
                </Border>
                <Path
                    Width="13"
                    Height="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="F1M1719.66,218.12L1735.66,246.166 1751.66,274.21 1719.66,274.21 1687.66,274.21 1703.66,246.166 1719.66,218.12z"
                    Fill="#FFF7F8F9"
                    Stretch="Uniform"
                    Stroke="DarkOrange"
                    StrokeThickness="2" />
                <Path
                    Width="13"
                    Height="11"
                    Margin="0,2,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="F1M1719.66,218.12L1735.66,246.166 1751.66,274.21 1719.66,274.21 1687.66,274.21 1703.66,246.166 1719.66,218.12z"
                    Fill="#FFF7F8F9"
                    Stretch="Uniform" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="yLabel">
            <StackPanel Margin="0,0,-9,0" Orientation="Horizontal">
                <StackPanel Background="DarkOrange">
                    <TextBlock
                        Margin="5,7,5,0"
                        HorizontalAlignment="Center"
                        FontSize="10"
                        Foreground="White"
                        Text="{Binding ValueY}" />
                </StackPanel>
                <Path
                    Width="10"
                    Height="10"
                    Margin="-1,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="F1M1719.66,218.12L1735.66,246.166 1751.66,274.21 1719.66,274.21 1687.66,274.21 1703.66,246.166 1719.66,218.12z"
                    Fill="DarkOrange"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform">
                    <Path.RenderTransform>
                        <RotateTransform Angle="90" />
                    </Path.RenderTransform>
                </Path>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="adornmentLabel">
            <Border Visibility="Collapsed" />
        </DataTemplate>
        <Style x:Key="labelTemplate1" TargetType="Line">
            <Setter Property="Stroke" Value="White" />
        </Style>
        <DataTemplate x:Key="symbol">
            <Ellipse
                Width="12"
                Height="12"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Fill="{Binding Series.AdornmentsInfo.SymbolInterior}"
                Stroke="#013662"
                StrokeThickness="3" />
        </DataTemplate>

        <Style x:Key="trackBallStyle" TargetType="charts:ChartTrackBallControl">
            <Setter Property="Height" Value="0" />
            <Setter Property="Width" Value="0" />
            <Setter Property="StrokeThickness" Value="0" />
        </Style>

        <Style x:Key="axisLineStyle" TargetType="Line">
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="Stroke" Value="White" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="15,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="Grd"
            Grid.Row="1"
            Grid.ColumnSpan="2">
            <Grid.DataContext>
                <patientDetailsDemo:HistoryDetailsViewModel />
            </Grid.DataContext>

            <charts:SfChart
                x:Name="HistoryDetails"
                Margin="10"
                AreaBorderThickness="0"
                Background="Transparent">

                <charts:SfChart.RowDefinitions>
                    <charts:ChartRowDefinition
                        Height="1"
                        BorderStroke="#FFD8E5F2"
                        BorderThickness="1" />
                    <charts:ChartRowDefinition
                        Height="1"
                        BorderStroke="#FFD8E5F2"
                        BorderThickness="1" />
                    <charts:ChartRowDefinition
                        Height="1"
                        BorderStroke="#FFD8E5F2"
                        BorderThickness="1" />
                    <charts:ChartRowDefinition
                        Height="1"
                        BorderStroke="#FFD8E5F2"
                        BorderThickness="1" />
                </charts:SfChart.RowDefinitions>


                <charts:SfChart.Behaviors>
                    <charts:ChartZoomPanBehavior ResetOnDoubleTap="False" ZoomMode="X" />
                    <patientDetailsDemo:CustomTrackBallBehavior
                        CustomLabelTemplate="{StaticResource customLabel}"
                        LabelHorizontalAlignment="Near"
                        LabelVerticalAlignment="Far"
                        LineStyle="{StaticResource trackerLineStyle}"
                        UseSeriesPalette="True" />
                </charts:SfChart.Behaviors>

                <charts:SfChart.PrimaryAxis>
                    <charts:CategoryAxis
                        AxisLineStyle="{StaticResource axisLineStyle}"
                        Background="{StaticResource XAxisLabelBackground}"
                        BorderBrush="White"
                        Foreground="White"
                        Interval="1"
                        LabelTemplate="{StaticResource labelTemplate}"
                        PlotOffset="10"
                        ShowGridLines="False"
                        ShowTrackBallInfo="True"
                        TickLineSize="0"
                        TrackBallLabelTemplate="{StaticResource xLabel}"
                        ZoomFactor="0.08" />
                </charts:SfChart.PrimaryAxis>

                <charts:SfChart.SecondaryAxis>
                    <charts:NumericalAxis
                        charts:SfChart.Row="3"
                        AxisLineStyle="{StaticResource lineStyle2}"
                        Foreground="White"
                        Interval="30"
                        LabelExtent="30"
                        LabelFormat="#"
                        LabelTemplate="{StaticResource yAxisTemplate}"
                        Maximum="40"
                        Minimum="10"
                        PlotOffset="10"
                        ShowGridLines="False"
                        ShowTrackBallInfo="True"
                        SmallTickLineSize="0"
                        TickLineSize="0"
                        TrackBallLabelTemplate="{StaticResource yLabel}">
                        <charts:NumericalAxis.Header>
                            <Grid RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <RotateTransform Angle="90" />
                                </Grid.RenderTransform>
                                <Ellipse
                                    Width="25"
                                    Height="25"
                                    Fill="#FF1BA1E2" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Foreground="White"
                                    Text="Sat" />
                            </Grid>
                        </charts:NumericalAxis.Header>
                    </charts:NumericalAxis>
                </charts:SfChart.SecondaryAxis>


                <charts:FastLineSeries
                    ItemsSource="{Binding HealthDetails}"
                    StrokeThickness="3"
                    TrackBallLabelTemplate="{StaticResource trackBallLabel}"
                    XBindingPath="DateTime"
                    YBindingPath="Sat">
                    <charts:FastLineSeries.AdornmentsInfo>
                        <charts:ChartAdornmentInfo
                            ShowMarker="True"
                            SymbolHeight="10"
                            SymbolWidth="10">
                            <charts:ChartAdornmentInfo.SymbolTemplate>
                                <DataTemplate>
                                    <Ellipse
                                        Width="10"
                                        Height="10"
                                        Fill="#FF2EA1DA"
                                        Stroke="White"
                                        StrokeThickness="2" />
                                </DataTemplate>
                            </charts:ChartAdornmentInfo.SymbolTemplate>
                        </charts:ChartAdornmentInfo>
                    </charts:FastLineSeries.AdornmentsInfo>
                </charts:FastLineSeries>

                <charts:FastLineSeries
                    ItemsSource="{Binding HealthDetails}"
                    StrokeThickness="3"
                    TrackBallLabelTemplate="{StaticResource trackBallLabel}"
                    XBindingPath="DateTime"
                    YBindingPath="RR">
                    <charts:FastLineSeries.YAxis>
                        <charts:NumericalAxis
                            charts:SfChart.Row="2"
                            AxisLineStyle="{StaticResource lineStyle2}"
                            Interval="60"
                            LabelExtent="30"
                            LabelFormat="#"
                            LabelTemplate="{StaticResource yAxisTemplate}"
                            Maximum="100"
                            Minimum="40"
                            PlotOffset="10"
                            ShowGridLines="False"
                            ShowTrackBallInfo="True"
                            SmallTickLineSize="0"
                            TickLineSize="0"
                            TrackBallLabelTemplate="{StaticResource yLabel}">
                            <charts:NumericalAxis.Header>
                                <Grid RenderTransformOrigin="0.5,0.5">
                                    <Grid.RenderTransform>
                                        <RotateTransform Angle="90" />
                                    </Grid.RenderTransform>
                                    <Ellipse
                                        Width="25"
                                        Height="25"
                                        Fill="#FFA05000" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="10"
                                        Foreground="White"
                                        Text="RR" />
                                </Grid>
                            </charts:NumericalAxis.Header>
                        </charts:NumericalAxis>
                    </charts:FastLineSeries.YAxis>
                    <charts:FastLineSeries.AdornmentsInfo>
                        <charts:ChartAdornmentInfo
                            ShowMarker="True"
                            SymbolHeight="10"
                            SymbolWidth="10">
                            <charts:ChartAdornmentInfo.SymbolTemplate>
                                <DataTemplate>
                                    <Ellipse
                                        Width="10"
                                        Height="10"
                                        Fill="#FFA0562A"
                                        Stroke="White"
                                        StrokeThickness="2" />
                                </DataTemplate>
                            </charts:ChartAdornmentInfo.SymbolTemplate>
                        </charts:ChartAdornmentInfo>
                    </charts:FastLineSeries.AdornmentsInfo>
                </charts:FastLineSeries>

                <charts:FastLineSeries
                    ItemsSource="{Binding HealthDetails}"
                    StrokeThickness="3"
                    TrackBallLabelTemplate="{StaticResource trackBallLabel}"
                    XBindingPath="DateTime"
                    YBindingPath="HR">
                    <charts:FastLineSeries.YAxis>
                        <charts:NumericalAxis
                            charts:SfChart.Row="1"
                            AxisLineStyle="{StaticResource lineStyle2}"
                            Interval="100"
                            LabelExtent="30"
                            LabelFormat="#"
                            LabelTemplate="{StaticResource yAxisTemplate}"
                            Maximum="200"
                            Minimum="100"
                            PlotOffset="10"
                            ShowGridLines="False"
                            ShowTrackBallInfo="True"
                            SmallTickLineSize="0"
                            TickLineSize="0"
                            TrackBallLabelTemplate="{StaticResource yLabel}">
                            <charts:NumericalAxis.Header>
                                <Grid RenderTransformOrigin="0.5,0.5">
                                    <Grid.RenderTransform>
                                        <RotateTransform Angle="90" />
                                    </Grid.RenderTransform>
                                    <Ellipse
                                        Width="25"
                                        Height="25"
                                        Fill="#FF339333" />
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="HR" />
                                    </StackPanel>
                                </Grid>
                            </charts:NumericalAxis.Header>
                        </charts:NumericalAxis>
                    </charts:FastLineSeries.YAxis>
                    <charts:FastLineSeries.AdornmentsInfo>
                        <charts:ChartAdornmentInfo
                            ShowMarker="True"
                            SymbolHeight="10"
                            SymbolWidth="10">
                            <charts:ChartAdornmentInfo.SymbolTemplate>
                                <DataTemplate>
                                    <Ellipse
                                        Width="10"
                                        Height="10"
                                        Fill="#FF359E47"
                                        Stroke="White"
                                        StrokeThickness="2" />
                                </DataTemplate>
                            </charts:ChartAdornmentInfo.SymbolTemplate>
                        </charts:ChartAdornmentInfo>
                    </charts:FastLineSeries.AdornmentsInfo>
                </charts:FastLineSeries>

                <charts:FastLineSeries
                    ItemsSource="{Binding HealthDetails}"
                    StrokeThickness="3"
                    TrackBallLabelTemplate="{StaticResource trackBallLabel}"
                    XBindingPath="DateTime"
                    YBindingPath="Temp">

                    <charts:FastLineSeries.YAxis>
                        <charts:NumericalAxis
                            charts:SfChart.Row="0"
                            AxisLineStyle="{StaticResource lineStyle2}"
                            Interval="70"
                            LabelExtent="30"
                            LabelFormat="#"
                            LabelTemplate="{StaticResource yAxisTemplate}"
                            Maximum="106"
                            Minimum="36"
                            PlotOffset="10"
                            ShowGridLines="False"
                            ShowTrackBallInfo="True"
                            SmallTickLineSize="0"
                            TickLineSize="0"
                            TrackBallLabelTemplate="{StaticResource yLabel}">
                            <charts:NumericalAxis.Header>
                                <Grid RenderTransformOrigin="0.5,0.5">
                                    <Grid.RenderTransform>
                                        <RotateTransform Angle="90" />
                                    </Grid.RenderTransform>
                                    <Ellipse
                                        Width="25"
                                        Height="25"
                                        Fill="#A2C139" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="10"
                                        Foreground="White"
                                        Text="Temp" />
                                </Grid>
                            </charts:NumericalAxis.Header>
                        </charts:NumericalAxis>
                    </charts:FastLineSeries.YAxis>
                    <charts:FastLineSeries.AdornmentsInfo>
                        <charts:ChartAdornmentInfo
                            ShowMarker="True"
                            SymbolHeight="10"
                            SymbolWidth="10">
                            <charts:ChartAdornmentInfo.SymbolTemplate>
                                <DataTemplate>
                                    <Ellipse
                                        Width="10"
                                        Height="10"
                                        Fill="#FFA1C03A"
                                        Stroke="White"
                                        StrokeThickness="2" />
                                </DataTemplate>
                            </charts:ChartAdornmentInfo.SymbolTemplate>
                        </charts:ChartAdornmentInfo>
                    </charts:FastLineSeries.AdornmentsInfo>
                </charts:FastLineSeries>

            </charts:SfChart>
        </Grid>

    </Grid>

</UserControl>


