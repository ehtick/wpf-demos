                                <chart:ChartZoomPanBehavior  x:Name="zoom" ToolBarOrientation="Horizontal" ZoomMode="X"
                                             HorizontalPosition="Center" VerticalPosition="Top" EnableZoomingToolBar="False"/>
                            </chart:SfChart.Behaviors>
