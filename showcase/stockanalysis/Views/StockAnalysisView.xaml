                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" ShadowDepth="4" BlurRadius="4" Direction="270" Opacity="0.25"/>
                                    </Border.Effect>
                                    <Button  Name="SplitterButton" 
                                             IsTabStop="False"
                                             Focusable="False"
                                             Width="18" 
                                             Height="18"  
                                             Background="Transparent"  
