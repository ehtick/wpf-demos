<syncfusion:ChromelessWindow x:Class="syncfusion.organizationallayout.wpf.CreateNewWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:local="clr-namespace:syncfusion.organizationallayout.wpf"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             mc:Ignorable="d"
                             ResizeMode="NoResize"
                             WindowStartupLocation="CenterScreen"
                             ShowMinimizeButton="false"
                             ShowMaximizeButton="false"
                             TitleBarBackground="#FFFFFF"
                             TitleBarForeground="#444444"
                             TitleBarHeight="32"
                             TitleTextAlignment="Left"
                             ShowIcon="False"
                             Title="Create new" Height="140" Width="300">
    <Grid Height="110" Width="300" Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="12,6,0,0" 
                   Text="Enter the filename"
                   FontFamily="Segoe UI"
                   FontSize="12"
                   Foreground="#6F6F6F"
                   LineHeight="18"
                   Height="18"/>
        <TextBox x:Name="txtFileName"
                 Grid.Row="1" Margin="12,6,0,0"
                 Text="Untitled"
                 FontFamily="Segoe UI"
                 FontSize="12"
                 Foreground="#444444"
                 Width="275"
                 Height="24"
                 HorizontalAlignment="Left"
                 VerticalContentAlignment="Center"/>
        <Grid Grid.Row="2" Width="299" Height="1" Margin="0,12,0,0">
            <Path Data="M299 0V1H0V0H299Z" Fill="#D2D2D2"/>
        </Grid>
        <Grid Grid.Row="3" HorizontalAlignment="Right" Margin="0,6,0,6">
            <Button x:Name="btnOk" Margin="0,0,72,0"
                    Content="Ok"
                    FontFamily="Segoe UI"
                    FontSize="12"
                    Foreground="#3A3A38"
                    Width="49"
                    Height="24"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="btnOk_Click"/>
            <Button x:Name="btnCancel" Margin="0,0,12,0"
                    Content="Cancel"
                    FontFamily="Segoe UI"
                    FontSize="12"
                    Foreground="#3A3A38"
                    Width="54"
                    Height="24"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="btnCancel_Click"/>
        </Grid>
    </Grid>
</syncfusion:ChromelessWindow>
