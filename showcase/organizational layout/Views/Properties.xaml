<syncfusion:ChromelessWindow x:Class="syncfusion.organizationallayout.wpf.Views.Properties"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:local="clr-namespace:syncfusion.organizationallayout.wpf.Views"
                             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                             ShowIcon="False"
                             TitleBarBackground="#FFFFFF"
                             TitleBarForeground="#444444"
                             TitleBarHeight="32"
                             TitleTextAlignment="Left"
                             ShowMinimizeButton="false"
                             ShowMaximizeButton="false"
                             mc:Ignorable="d"
                             Title="Properties"
                             Height="260"
                             Width="300"
                             ResizeMode="NoResize"
                             WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0">
            <Label Content="Name"/>
            <Label Content="Role" />
            <Label Content="Employee ID" />
            <Label Content="Team" />
            <Label Content="E-Mail" />
            <Label Content="Phone Number" />
            <Label Content="Tier" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBox Name="NameTextBox" Height="24" Margin="0,2,0,0" FontSize="12" VerticalContentAlignment="Center"/>
            <TextBox Name="RoleTextBox" Height="24" Margin="0,2,0,0" FontSize="12" VerticalContentAlignment="Center"/>
            <TextBox Name="EMPIDTextBox" Height="24" Margin="0,2,0,0" FontSize="12" VerticalContentAlignment="Center"/>
            <TextBox Name="TeamTextBox" Height="24" Margin="0,2,0,0" FontSize="12" VerticalContentAlignment="Center"/>
            <TextBox Name="EMailTextBox" Height="24" Margin="0,2,0,0" FontSize="12" VerticalContentAlignment="Center"/>
            <TextBox Name="PhoneTextBox" Height="24" Margin="0,2,0,0" FontSize="12" VerticalContentAlignment="Center"/>
            <TextBox Name="TierTextBox" Height="24" Margin="0,2,0,0" FontSize="12" VerticalContentAlignment="Center"/>            
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Button x:Name="OkButton" Content="Ok" VerticalAlignment="Bottom" Height="24" Margin="95,0,0,8" Width="40" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" VerticalAlignment="Bottom" Height="24" Margin="5,0,0,8" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</syncfusion:ChromelessWindow>
