<UserControl
    x:Class="syncfusion.salesanalysis.wpf.Chart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:syncfusion.salesanalysis.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="lineStyle" TargetType="Line">
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="Stroke" Value="Black" />
            </Style>
            <Style x:Key="AxislineStyle" TargetType="Line">
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="Stroke" Value="Black" />
            </Style>
        </Grid.Resources>
        <chart:SfDateTimeRangeNavigator
            ItemsSource="{Binding SalesVsTarget}"
            Maximum="Jun/30/2012"
            Minimum="Jan/1/2012"
            ViewRangeEnd="{Binding RangeEnd, Mode=TwoWay}"
            ViewRangeStart="{Binding RangeStart, Mode=TwoWay}"
            XBindingPath="Date"
            ZoomFactor="0.3341"
            ZoomPosition="0.33">
            <chart:SfDateTimeRangeNavigator.Content>
                <Grid>
                    <chart:SfLineSparkline
                        Interior="#5388BC"
                        ItemsSource="{Binding SalesVsTarget}"
                        YBindingPath="Sales" />
                    <chart:SfLineSparkline
                        Interior="#36943D"
                        ItemsSource="{Binding SalesVsTarget}"
                        YBindingPath="Target" />
                </Grid>
            </chart:SfDateTimeRangeNavigator.Content>
        </chart:SfDateTimeRangeNavigator>
    </Grid>
</UserControl>
