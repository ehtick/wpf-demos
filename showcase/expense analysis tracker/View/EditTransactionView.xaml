<UserControl x:Class="syncfusion.expenseanalysis.wpf.EditTransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.expenseanalysis.wpf"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.expenseanalysis.wpf;component/Assets/ExpenseAnalysis/TextStyleResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel 
            Margin="6">
            <TextBlock
                Margin="6"
                Style="{StaticResource CaptionLight}"
                Text="Date"/>
            <syncfusion:DateTimeEdit
                Margin="6"
                Height="24"
                MaxDateTime="{x:Static sys:DateTime.Now}"
                DateTime="{Binding 
                    Date,
                    UpdateSourceTrigger=PropertyChanged,
                    ValidatesOnDataErrors=True}"/>
            <TextBlock
                Margin="6"
                Style="{StaticResource CaptionLight}"
                Text="Category"/>
            <ComboBox
                Margin="6"
                ItemsSource="{Binding Categories}"
                Height="24"
                SelectedItem="{Binding 
                    Category,
                    UpdateSourceTrigger=PropertyChanged,
                    ValidatesOnDataErrors=True}"/>
            <TextBlock
                Margin="6"
                Style="{StaticResource CaptionLight}"
                Text="Sub Category"/>
            <ComboBox
                Margin="6"
                ItemsSource="{Binding SubCategories}"
                Height="24"
                SelectedItem="{Binding 
                    SubCategory,
                    UpdateSourceTrigger=PropertyChanged,
                    ValidatesOnDataErrors=True}"/>
            <TextBlock
                Margin="6"
                Style="{StaticResource CaptionLight}"
                Text="Amount"/>
            <syncfusion:CurrencyTextBox
                Margin="6"
                Height="24"
                Value="{Binding 
                    Amount,
                    UpdateSourceTrigger=PropertyChanged,
                    ValidatesOnDataErrors=True}"/>
        </StackPanel>
    </Grid>
</UserControl>
