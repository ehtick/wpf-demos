                                    Style="{StaticResource HeadingSmall}"
                                    FontSize="28"
                                    Text="{Binding Expense, StringFormat='{}{0:c0}'}" 
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,0,-4"/>
                                <TextBlock
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource HeadingSmall}"
                                    FontSize="12"
                                    Text="{Binding Limit, StringFormat='/{0:c0}'}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
