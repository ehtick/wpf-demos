<UserControl x:Class="syncfusion.expenseanalysis.wpf.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:syncfusion.expenseanalysis.wpf"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/syncfusion.expenseanalysis.wpf;component/Assets/ExpenseAnalysis/TextStyleResources.xaml"/>
                <ResourceDictionary Source="/syncfusion.expenseanalysis.wpf;component/Assets/ExpenseAnalysis/IconResources.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/MSControl/PrimaryButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:IconResourceConverter
                x:Key="iconResourceConverter">
                <local:IconResourceConverter.Resource>
                    <ResourceDictionary Source="/syncfusion.expenseanalysis.wpf;component/Assets/ExpenseAnalysis/IconResources.xaml"/>
                </local:IconResourceConverter.Resource>
            </local:IconResourceConverter>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border
                HorizontalAlignment="Stretch"
                Background="#0A335EF7"
                Margin="12"
                CornerRadius="12"
                Padding="16">
                <Grid
                    HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ContentPresenter 
                        Grid.RowSpan="2"
                        ContentTemplate="{StaticResource Balance}"/>
                    <TextBlock
                        Text="Your Balance"
                        Grid.Column="2"
                        Style="{StaticResource BodyMedium}"/>
                    <TextBlock
                        Text="{Binding Balance, StringFormat=c0}"
                        Style="{StaticResource HeadingMedium}"
                        Grid.Column="2"
                        Grid.Row="1"/>
                </Grid>
            </Border>
            <Border
                HorizontalAlignment="Stretch"
                Grid.Column="1"
                Background="#0A06AA20"
                Margin="12"
                CornerRadius="12"
                Padding="16">
                <Grid
                    HorizontalAlignment="Left"
                    Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ContentPresenter
                        ContentTemplate="{StaticResource TotalIncome}"
                        Grid.RowSpan="2"/>
                    <TextBlock
                        Text="Total Income"
                        Grid.Column="2"
                        Style="{StaticResource BodyMedium}"/>
                    <TextBlock
                        Text="{Binding TotalIncome, StringFormat=c0}"
                        Style="{StaticResource HeadingMedium}"
                        Grid.Column="2"
                        Grid.Row="1"/>
                </Grid>
            </Border>
            <Border
                HorizontalAlignment="Stretch"
                Grid.Column="2"
                Background="#0AF03D3D"
                Margin="12"
                CornerRadius="12"
                Padding="16">
                <Grid
                    HorizontalAlignment="Left"
                    Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ContentPresenter
                        ContentTemplate="{StaticResource TotalExpense}"
                        Grid.RowSpan="2"/>
                    <TextBlock
                        Text="Total Expense"
                        Grid.Column="2"
                        Style="{StaticResource BodyMedium}"/>
                    <TextBlock
                        Text="{Binding TotalExpense, StringFormat=c0}"
                        Grid.Column="2"
                        Grid.Row="1"
                        Style="{StaticResource HeadingMedium}"/>
                </Grid>
            </Border>
            <Border
                HorizontalAlignment="Stretch"
                Grid.Column="3"
                Background="#0A7C3AED"
                Margin="12"
                CornerRadius="12"
                Padding="16">
                <Grid
                    HorizontalAlignment="Left"
                    Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ContentPresenter
                        ContentTemplate="{StaticResource TotalTransactions}"
                        Grid.RowSpan="2"/>
                    <TextBlock
                        Text="Total Transactions"
                        Grid.Column="2"
                        Style="{StaticResource BodyMedium}"/>
                    <TextBlock
                        Text="{Binding TotalTransactions}"
                        Grid.Column="2"
                        Grid.Row="1"
                        Style="{StaticResource HeadingMedium}"/>
                </Grid>
            </Border>
        </Grid>
        <DockPanel
            HorizontalAlignment="Stretch"
            LastChildFill="False"
            Grid.Row="1">
            <TextBlock
                Margin="12"
                Text="Transactions"
                VerticalAlignment="Center"
                Style="{StaticResource HeadingSmall}"
                DockPanel.Dock="Left"/>
            <Button
                Padding="8,6"
                Margin="12"
                Style="{StaticResource WPFPrimaryButtonStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                Command="{Binding AddTransactionCommand}"
                Content="Add Transaction"/>
            <Button
                Padding="8,6"
                Margin="12"
                BorderThickness="0"
                DockPanel.Dock="Right"
