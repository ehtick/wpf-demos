<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BoldText" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="NormalText" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TitleLarge" BasedOn="{StaticResource BoldText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="28"/>
        </Style.Setters>
    </Style>

    <Style x:Key="HeadingMedium" BasedOn="{StaticResource BoldText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="24"/>
        </Style.Setters>
    </Style>

    <Style x:Key="HeadingSmall" BasedOn="{StaticResource BoldText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="20"/>
        </Style.Setters>
    </Style>

    <Style x:Key="LabelLarge" BasedOn="{StaticResource BoldText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="16"/>
        </Style.Setters>
    </Style>

    <Style x:Key="LabelMedium" BasedOn="{StaticResource BoldText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="14"/>
        </Style.Setters>
    </Style>

    <Style x:Key="BodyLarge" BasedOn="{StaticResource NormalText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="16"/>
        </Style.Setters>
    </Style>

    <Style x:Key="BodyMedium" BasedOn="{StaticResource NormalText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="14"/>
        </Style.Setters>
    </Style>

    <Style x:Key="Caption" BasedOn="{StaticResource NormalText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="12"/>
        </Style.Setters>
    </Style>

    <Style x:Key="CaptionLight" BasedOn="{StaticResource NormalText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#6B7280"/>
        </Style.Setters>
    </Style>

    <Style x:Key="Overline" BasedOn="{StaticResource NormalText}" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="FontSize" Value="10"/>
        </Style.Setters>
    </Style>
</ResourceDictionary>