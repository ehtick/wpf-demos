<democommon:DemoControl
    x:Class="syncfusion.mapdemos.wpf.GettingStarted"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.mapdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto">

    <democommon:DemoControl.DataContext>
        <local:MapViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="USAMarkerTemplate">
            <Grid Margin="-10,-30,0,0">
                <Canvas>
                    <Image Height="20" Source="/syncfusion.mapdemos.wpf;component/Assets/Map/Images/pin.png" />
                </Canvas>
                <Grid Width="265" DataContext="{Binding Data}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Canvas Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="20"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="15"
                            FontWeight="Bold"
                            RenderTransformOrigin="0.515,-0.3"
                            Text="{Binding Name}" />
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="40"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Text="{Binding LocalTime}" />
                    </Canvas>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="brazilMarkerTemplate">
            <Grid Margin="-10,-30,0,0">
                <Canvas>
                    <Image Height="20" Source="/syncfusion.mapdemos.wpf;component/Assets/Map/Images/pin.png" />
                </Canvas>
                <Grid Width="265" DataContext="{Binding Data}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Canvas Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="20"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="15"
                            FontWeight="Bold"
                            RenderTransformOrigin="0.515,-0.3"
                            Text="{Binding Name}" />
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="40"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Text="{Binding LocalTime}" />
                    </Canvas>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="indiaMarkerTemplate">
            <Grid Margin="-10,-30,0,0">
                <Canvas>
                    <Image Height="20" Source="/syncfusion.mapdemos.wpf;component/Assets/Map/Images/pin.png" />
                </Canvas>
                <Grid Width="265" DataContext="{Binding Data}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Canvas Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="20"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="15"
                            FontWeight="Bold"
                            RenderTransformOrigin="0.515,-0.3"
                            Text="{Binding Name}" />
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="40"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Text="{Binding LocalTime}" />
                    </Canvas>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="chinaMarkerTemplate">
            <Grid Margin="-10,-30,0,0">
                <Canvas>
                    <Image Height="20" Source="/syncfusion.mapdemos.wpf;component/Assets/Map/Images/pin.png" />
                </Canvas>
                <Grid Width="265" DataContext="{Binding Data}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Canvas Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="20"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="15"
                            FontWeight="Bold"
                            RenderTransformOrigin="0.515,-0.3"
                            Text="{Binding Name}" />
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="40"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Text="{Binding LocalTime}" />
                    </Canvas>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="indonesiaMarkerTemplate">
            <Grid Margin="-10,-30,0,0">
                <Canvas>
                    <Image Height="20" Source="/syncfusion.mapdemos.wpf;component/Assets/Map/Images/pin.png" />
                </Canvas>
                <Grid Width="265" DataContext="{Binding Data}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Canvas Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="20"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="15"
                            FontWeight="Bold"
                            RenderTransformOrigin="0.515,-0.3"
                            Text="{Binding Name}" />
                        <TextBlock
                            Canvas.Left="0"
                            Canvas.Top="40"
                            HorizontalAlignment="Center"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Text="{Binding LocalTime}" />
                    </Canvas>
                </Grid>
            </Grid>
        </DataTemplate>
    </democommon:DemoControl.Resources>

    <Grid>
        <Grid.Resources>
            <local:MapMarkerTemplateSelector x:Key="customMarkerTemplateSelector" 
                                                USAMarkerTemplate="{StaticResource USAMarkerTemplate}"
                                                BrazilMarkerTemplate="{StaticResource brazilMarkerTemplate}"
                                                IndiaMarkerTemplate="{StaticResource indiaMarkerTemplate}"
                                                ChinaMarkerTemplate="{StaticResource chinaMarkerTemplate}"
                                                IndonesiaMarkerTemplate="{StaticResource indonesiaMarkerTemplate}"/>
        </Grid.Resources>
        <syncfusion:SfMap x:Name="map" Margin="20">
            <syncfusion:SfMap.Layers>
                <syncfusion:ShapeFileLayer
                                x:Name="shapeFileLayer"
                                CustomDataSourceTemplate="{x:Null}"
                                MarkerHorizontalAlignment="Far"
                                Markers="{Binding Models}"
                                Uri="/syncfusion.mapdemos.wpf;component/Assets/Map/Data/world1.shp" 
                                MarkerTemplateSelector="{StaticResource customMarkerTemplateSelector}">
                    <syncfusion:ShapeFileLayer.ShapeSettings>
                        <syncfusion:ShapeSetting ShapeStrokeThickness="1"/>
                    </syncfusion:ShapeFileLayer.ShapeSettings>
                </syncfusion:ShapeFileLayer>
            </syncfusion:SfMap.Layers>
        </syncfusion:SfMap>
    </Grid>
</democommon:DemoControl>