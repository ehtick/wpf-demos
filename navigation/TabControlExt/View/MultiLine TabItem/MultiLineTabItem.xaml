<democommon:DemoControl
    x:Class="syncfusion.navigationdemos.wpf.MultilineTabItemsDemosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.navigationdemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    mc:Ignorable="d">
    <democommon:DemoControl.DataContext>
        <local:MultilineTabitemViewModel />
    </democommon:DemoControl.DataContext>
    <democommon:DemoControl.Resources>
        <DataTemplate x:Key="HeaderTemplate">
            <TextBlock Text="{Binding Header, Mode=TwoWay}" />
        </DataTemplate>
        <DataTemplate x:Key="ContentTemplate">
            <Label Content="{Binding Content}" />
        </DataTemplate>
        <DataTemplate x:Key="EditHeaderTemplate">
            <TextBox Text="{Binding Header, Mode=TwoWay}" />
        </DataTemplate>
        <DataTemplate x:Key="TabListContentTemplate">
            <TextBlock Text="{Binding Header}" />
        </DataTemplate>
    </democommon:DemoControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="20">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="SingleLine"
                    FontWeight="SemiBold" />
                <syncfusion:TabControlExt
                    Name="tabControlExt"
                    ContentTemplate="{StaticResource ContentTemplate}"
                    EditHeaderTemplate="{StaticResource EditHeaderTemplate}"
                    ItemTemplate="{StaticResource HeaderTemplate}"
                    ItemsSource="{Binding TabItems}"
                    TabItemLayout="SingleLine"
                    TabListContextMenuItemTemplate="{StaticResource TabListContentTemplate}" />
            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="20">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="SingleLineStar"
                    FontWeight="SemiBold" />
                <syncfusion:TabControlExt
                    Name="tabControlExt1"
                    ContentTemplate="{StaticResource ContentTemplate}"
                    EditHeaderTemplate="{StaticResource EditHeaderTemplate}"
                    ItemTemplate="{StaticResource HeaderTemplate}"
                    ItemsSource="{Binding Multiline_Tabitems}"
                    TabItemLayout="SingleLineStar"
                    TabListContextMenuItemTemplate="{StaticResource TabListContentTemplate}" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="20">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="MultiLine"
                    FontWeight="SemiBold" />

                <syncfusion:TabControlExt
                    Name="tabControlExt2"
                    ContentTemplate="{StaticResource ContentTemplate}"
                    EditHeaderTemplate="{StaticResource EditHeaderTemplate}"
                    ItemTemplate="{StaticResource HeaderTemplate}"
                    ItemsSource="{Binding TabItems}"
                    TabItemLayout="MultiLine"
                    TabListContextMenuItemTemplate="{StaticResource TabListContentTemplate}" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="20">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="MultiLineStar"
                    FontWeight="SemiBold" />
                <syncfusion:TabControlExt
                    Name="tabControlExt3"
                    ContentTemplate="{StaticResource ContentTemplate}"
                    EditHeaderTemplate="{StaticResource EditHeaderTemplate}"
                    ItemTemplate="{StaticResource HeaderTemplate}"
                    ItemsSource="{Binding TabItems}"
                    TabItemLayout="MultiLineStar"
                    TabListContextMenuItemTemplate="{StaticResource TabListContentTemplate}" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Margin="20">
                <Label
                    Width="auto"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="MultiLineWithFullWidth"
                    FontWeight="SemiBold" />
                <syncfusion:TabControlExt
                    Name="tabControlExt4"
                    ContentTemplate="{StaticResource ContentTemplate}"
                    EditHeaderTemplate="{StaticResource EditHeaderTemplate}"
                    ItemTemplate="{StaticResource HeaderTemplate}"
                    ItemsSource="{Binding TabItems}"
                    TabItemLayout="MultiLineWithFullWidth"
                    TabListContextMenuItemTemplate="{StaticResource TabListContentTemplate}" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</democommon:DemoControl>
