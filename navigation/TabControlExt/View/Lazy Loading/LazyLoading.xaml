<democommon:DemoControl
    x:Class="syncfusion.navigationdemos.wpf.LazyLoadingDemosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.navigationdemos.wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Lazy Loading"
    Description="The Tab Control has the ability to load the tab pages on demand. In this sample, the TabControl has populated with 5 time consuming views and one normal view. The time consuming view never loaded its data, until it was navigated to."
    mc:Ignorable="d">

    <Grid>
        <syncfusion:TabControlExt x:Name="TabControl" IsLazyLoaded="True">
            <syncfusion:TabItemExt Header="2006-2007" Height="30">
                <local:TimeConsumingView />
            </syncfusion:TabItemExt>
            <syncfusion:TabItemExt Header="2007-2008" Height="30">
                <local:TimeConsumingView />
            </syncfusion:TabItemExt>
            <syncfusion:TabItemExt Header="2008-2009" Height="30">
                <local:TimeConsumingView />
            </syncfusion:TabItemExt>
            <syncfusion:TabItemExt Header="2009-2010" Height="30">
                <local:TimeConsumingView />
            </syncfusion:TabItemExt>
            <syncfusion:TabItemExt Header="2010-2011" Height="30">
                <local:TimeConsumingView />
            </syncfusion:TabItemExt>
        </syncfusion:TabControlExt>
    </Grid>
</democommon:DemoControl>
