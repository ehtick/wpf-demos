<democommon:DemoControl  
        x:Class="syncfusion.navigationdemos.wpf.TabStripPlacementDemosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:local="clr-namespace:syncfusion.navigationdemos.wpf"
        mc:Ignorable="d">
    <democommon:DemoControl.DataContext>
        <local:TabStripPlacementViewModel/>
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>
        <local:DockToVisibilityConverter x:Key="dockToVisibility"/>
    </democommon:DemoControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" 
                    Grid.Column="0"
                    Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label
                    Width="150"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="TabStripPlacement-Top"
                    FontWeight="SemiBold" />
            <syncfusion:TabControlExt
                x:Name="TabControlExt" 
                Grid.Row="1"
                ItemsSource="{Binding TabStripPlacemntModelItems}"
                TabStripPlacement="Top">
            <syncfusion:TabControlExt.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header, Mode=TwoWay}" />
                </DataTemplate>
            </syncfusion:TabControlExt.ItemTemplate>
            <syncfusion:TabControlExt.ContentTemplate>
                <DataTemplate>
                    <Label Content="{Binding Content}" />
                </DataTemplate>
            </syncfusion:TabControlExt.ContentTemplate>
        </syncfusion:TabControlExt>
        </Grid>

        <Grid Grid.Row="0"
                    Grid.Column="1"
                    Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label
                    Width="156"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="TabStripPlacement-Bottom"
                    FontWeight="SemiBold" />
            <syncfusion:TabControlExt
                x:Name="TabControlExt1"
                Grid.Row="1"
                ItemsSource="{Binding TabStripPlacemntModelItems}"
                TabStripPlacement="Bottom">
                <syncfusion:TabControlExt.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header, Mode=TwoWay}" />
                    </DataTemplate>
                </syncfusion:TabControlExt.ItemTemplate>
                <syncfusion:TabControlExt.ContentTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Content}" />
                    </DataTemplate>
                </syncfusion:TabControlExt.ContentTemplate>
            </syncfusion:TabControlExt>
        </Grid>

        <Grid Grid.Row="1"
                    Grid.Column="0"
                    Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label
                    Width="150"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="TabStripPlacement-Left"
                    FontWeight="SemiBold" />
            <syncfusion:TabControlExt
                x:Name="TabControlExt2"
                Grid.Row="1"
                ItemsSource="{Binding TabStripPlacemntModelItems}"
                TabStripPlacement="Left">
                <syncfusion:TabControlExt.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header, Mode=TwoWay}" />
                    </DataTemplate>
                </syncfusion:TabControlExt.ItemTemplate>
                <syncfusion:TabControlExt.ContentTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Content}" />
                    </DataTemplate>
                </syncfusion:TabControlExt.ContentTemplate>
            </syncfusion:TabControlExt>
        </Grid>

        <Grid Grid.Row="1"
                    Grid.Column="1"
                    Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label
                    Width="150"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="TabStripPlacement-Right"
                    FontWeight="SemiBold" />
            <syncfusion:TabControlExt
                x:Name="TabControlExt3"  
                Grid.Row="1"
                ItemsSource="{Binding TabStripPlacemntModelItems}"
                TabStripPlacement="Right">
                <syncfusion:TabControlExt.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header, Mode=TwoWay}" />
                    </DataTemplate>
                </syncfusion:TabControlExt.ItemTemplate>
                <syncfusion:TabControlExt.ContentTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Content}" />
                    </DataTemplate>
                </syncfusion:TabControlExt.ContentTemplate>
            </syncfusion:TabControlExt>
        </Grid>
    </Grid>
</democommon:DemoControl>
