<UserControl
    x:Class="syncfusion.navigationdemos.wpf.TabWeather"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:syncfusion.navigationdemos.wpf.Converter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:WeatherConverter x:Key="converter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image
            Width="52"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="{Binding Climate, Converter={StaticResource converter}}" />
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="5"
                    FontSize="25"
                    Text="{Binding Degree}" />
                <TextBlock Grid.Column="1">
                    <Run
                        BaselineAlignment="Superscript"
                        FontSize="14"
                        Text="o" />
                </TextBlock>
            </StackPanel>
            <TextBlock Margin="5,1,5,5" Text="{Binding Climate}" />
        </StackPanel>
        <StackPanel Grid.Column="3">

            <StackPanel
                Grid.Column="1"
                Margin="5,11,5,1"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="25"
                    FontWeight="Medium"
                    Text="{Binding Header}" />
                <TextBlock
                    FontSize="25"
                    FontWeight="Medium"
                    Text="," />
            </StackPanel>
            <TextBlock Margin="5,1" Text="{Binding Country}" />
        </StackPanel>
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="4"
            Height="1"
            Margin="-3,5"
            Background="{Binding ElementName=Root, Path=BorderBrush}" />
        <Grid Grid.Row="2" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Sunrise : " />
            <StackPanel
                Grid.Column="1"
                Margin="3"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="{Binding SunRise}" />
                <TextBlock Text=" AM" />
            </StackPanel>

            <TextBlock
                Grid.Row="1"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Sunset : " />
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="3"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="{Binding SunSet}" />
                <TextBlock Text=" PM" />
            </StackPanel>

            <TextBlock
                Grid.Row="2"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Latitude : " />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Margin="3"
                VerticalAlignment="Center"
                Text="{Binding Latitude}" />



            <TextBlock
                Grid.Row="3"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Longitude : " />
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Margin="3"
                VerticalAlignment="Center"
                Text="{Binding Longitude}" />



            <TextBlock
                Grid.Column="3"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Feels like : " />
            <StackPanel
                Grid.Column="4"
                Margin="3"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="{Binding FeelsLike}" />
                <TextBlock>
                    <Run
                        BaselineAlignment="Superscript"
                        FontSize="7"
                        Text="o" />
                </TextBlock>
            </StackPanel>

            <TextBlock
                Grid.Row="1"
                Grid.Column="3"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Humidity : " />
            <StackPanel
                Grid.Row="1"
                Grid.Column="4"
                Margin="3"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="{Binding Humidity}" />
                <TextBlock Text="%" />
            </StackPanel>

            <TextBlock
                Grid.Row="2"
                Grid.Column="3"
                Margin="3"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Temperature : " />
            <StackPanel
                Grid.Row="2"
                Grid.Column="4"
                Margin="3"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock Text="{Binding Degree}" />
                <TextBlock>
                    <Run
                        BaselineAlignment="Superscript"
                        FontSize="7"
                        Text="o" />
                </TextBlock>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
