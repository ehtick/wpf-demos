    <Grid Margin="4">
        <syncfusion:SfNavigationDrawer x:Name="navigationDrawer" DisplayMode="Expanded">
            <syncfusion:SfNavigationDrawer.ToggleButtonContentTemplate>
                <DataTemplate>
                    <TextBlock
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Shopping Cart" />
                </DataTemplate>
            </syncfusion:SfNavigationDrawer.ToggleButtonContentTemplate>
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="ItemClicked">
                    <local:NavationItemClickedAction TargetObject="{Binding ElementName=contentViewGrid}" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
            <syncfusion:SfNavigationDrawer.FooterItems>
                <syncfusion:NavigationItem Header="Account">
                    <syncfusion:NavigationItem.Icon>
                        <Path
                            Width="16"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="{StaticResource Account}"
                            Fill="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(TextBlock.Foreground)}"
                            Stretch="Fill" />
                    </syncfusion:NavigationItem.Icon>
                </syncfusion:NavigationItem>
                <syncfusion:NavigationItem Header="Your Cart">
                    <syncfusion:NavigationItem.Icon>
                        <Path
                            Width="14"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="{StaticResource YourCard}"
                            Fill="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(TextBlock.Foreground)}"
                            Stretch="Fill" />
                    </syncfusion:NavigationItem.Icon>
                </syncfusion:NavigationItem>
                <syncfusion:NavigationItem Header="Help">
                    <syncfusion:NavigationItem.Icon>
                        <Path
                            Width="10"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="{StaticResource Help}"
                            Fill="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(TextBlock.Foreground)}"
                            Stretch="Fill" />
                    </syncfusion:NavigationItem.Icon>
                </syncfusion:NavigationItem>
            </syncfusion:SfNavigationDrawer.FooterItems>
            <syncfusion:NavigationItem Header="Browse">
                <syncfusion:NavigationItem.Icon>
                    <Path
                        Width="16.001"
                        Height="13.009"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Data="{StaticResource Browse}"
                        Fill="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(TextBlock.Foreground)}"
                        Stretch="Fill" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
            <syncfusion:NavigationItem Header="Track an Order">
                <syncfusion:NavigationItem.Icon>
                    <Path
                        Width="15.999"
                        Height="16"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Data="{StaticResource TrackOrder}"
                        Fill="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(TextBlock.Foreground)}"
                        Stretch="Fill" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
            <syncfusion:NavigationItem Header="Order History" IsSelected="True">
                <syncfusion:NavigationItem.Icon>
                    <Path
                        Width="16.001"
                        Height="13"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Data="{StaticResource OrderHistory}"
                        Fill="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(TextBlock.Foreground)}"
                        Stretch="Fill" />
                </syncfusion:NavigationItem.Icon>
            </syncfusion:NavigationItem>
            <syncfusion:SfNavigationDrawer.ContentView>
                <Grid x:Name="contentViewGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <UserControl>
                        <TextBlock
                            Margin="10"
                            FontFamily="SegoeUI-Semibold"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="Order History" />
                    </UserControl>
                    <UserControl x:Name="contentView" Grid.Row="1" />
                </Grid>
            </syncfusion:SfNavigationDrawer.ContentView>
        </syncfusion:SfNavigationDrawer>
    </Grid>
</democommon:DemoControl>