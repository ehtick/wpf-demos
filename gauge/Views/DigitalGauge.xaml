<democommon:DemoControl
    x:Class="syncfusion.gaugedemos.wpf.DigitalGauge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.gaugedemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto">

    <Border BorderThickness="2" BorderBrush="{DynamicResource BorderAlt}" Height="300" Width="500">


        <Grid
        x:Name="LayoutRoot"
        Height="300"
                Margin="40,0,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
                <Grid.DataContext>
                    <local:DigitalGaugeViewModel />
                </Grid.DataContext>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Width="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <syncfusion:SfDigitalGauge
                                x:Name="timeGauge"
                                Grid.Column="0"
                                Margin="30,40,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                CharacterHeight="50"
                                CharacterType="SegmentSeven"
                                CharacterWidth="25"
                                CharactersSpacing="4"
                                SegmentThickness="3"
                                Value="{Binding TimeGauge}" />
                    <syncfusion:SfDigitalGauge
                                x:Name="secGauge"
                                Grid.Column="1"
                                Margin="30,60,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                CharacterHeight="30"
                                CharacterType="SegmentSeven"
                                CharacterWidth="30"
                                CharactersSpacing="4"
                                SegmentThickness="3"
                                Value="{Binding SecondsGauge}" />
                </Grid>
                <Grid Grid.Row="1" Width="450">


                </Grid>
                <Grid Grid.Row="1" Width="450">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="0.4*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.25*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                         HorizontalAlignment="Left"
                         Margin="15,0,0,0"
                         Grid.Row="0"
                         Grid.Column="0"
                         Text="Month"
                         TextWrapping="Wrap" />
                    <syncfusion:SfDigitalGauge
                         x:Name="monthGauge"
                         Grid.Row="1"
                         Grid.Column="0"
                         CharacterHeight="30"
                         CharacterType="SegmentFourteen"
                         CharacterWidth="30"
                         CharactersSpacing="10"
                         SegmentThickness="3"
                         Value="{Binding MonthGauge}" />
                    <TextBlock 
                        HorizontalAlignment="Left"
                        Margin="20,0,0,0"
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="Date"
                        TextWrapping="Wrap" />
                    <syncfusion:SfDigitalGauge
                        x:Name="dateGauge"
                        Grid.Row="1"
                        Grid.Column="1"
                                        CharacterHeight="30"
                                        CharacterType="SegmentFourteen"
                                        CharacterWidth="30"
                                        CharactersSpacing="5"
                                        RenderTransformOrigin="0.442,-0.424"
                                        SegmentThickness="3"
                                        Value="{Binding DateGauge}" />
                    <TextBlock 
                        Grid.Column="2"
                        Margin="40,0,0,0"
                        HorizontalAlignment="Left"
                        Grid.Row="0"
                        Text="Day"
                        TextWrapping="Wrap" />
                    <syncfusion:SfDigitalGauge
                                x:Name="dayGauge"
                                Grid.Row="1"
                                Grid.Column="2"
                                CharacterHeight="30"
                                CharacterType="SegmentFourteen"
                                CharacterWidth="30"
                                CharactersSpacing="4"
                                SegmentThickness="3"
                                Value="{Binding DayGauge}" />
                    <TextBlock 
                        Grid.Column="3"   
                        Margin="15,0,0,0"
                        Grid.Row="0"
                        HorizontalAlignment="Left"
                        Text="Temp"
                        TextWrapping="Wrap" />
                    <syncfusion:SfDigitalGauge
                         x:Name="tempGauge"
                         Grid.Row="1"
                         Grid.Column="3"
                         CharacterHeight="30"
                         CharacterType="SegmentFourteen"
                         CharacterWidth="30"
                         CharactersSpacing="1"
                         SegmentThickness="3"
                         Value="21" />
                </Grid>
            </Grid>
        </Border>
  
</democommon:DemoControl>
