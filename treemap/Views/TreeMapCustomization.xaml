<democommon:DemoControl
    x:Class="syncfusion.treemapdemos.wpf.TreeMapCustomization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.treemapdemos.wpf"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="auto"
    Height="auto">

    <democommon:DemoControl.DataContext>
        <local:TreeMapCustomizationViewModel />
    </democommon:DemoControl.DataContext>


    <Grid Margin="10">
        <Grid.Resources>
            <DataTemplate x:Key="toolTipTemplate">
                <Grid Width="200" Height="200">
                    <Ellipse
                        Width="200"
                        Height="200"
                        Stroke="#D73028">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0.0108067,-0.482356" EndPoint="0.0108067,0.500256">
                                <GradientStop Offset="0" Color="#FFFFFFFF" />
                                <GradientStop Offset="0.812067" Color="#FFF8F8F8" />
                                <GradientStop Offset="1" Color="#FFF2F2F2" />
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Height="160" VerticalAlignment="Center">
                        <StackPanel
                            Height="110"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Grid>
                                <Rectangle
                                    Width="50"
                                    Height="60"
                                    VerticalAlignment="Bottom"
                                    Stroke="White"
                                    StrokeThickness="0.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="-0.054283,-0.49755" EndPoint="-0.054283,0.565072">
                                            <GradientStop Offset="0" Color="#FF999999" />
                                            <GradientStop Offset="0.644782" Color="#FFA6A6A6" />
                                            <GradientStop Offset="1" Color="#FFB3B3B3" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock
                                    Margin="0,55,0,0"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="22"
                                    FontWeight="Light"
                                    Foreground="#FFFFFFFF"
                                    Text="{Binding Data.SilverMedals}" />
                            </Grid>
                            <Grid>
                                <Rectangle
                                    Width="50"
                                    Height="90"
                                    VerticalAlignment="Bottom"
                                    Stroke="White"
                                    StrokeThickness="0.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="-0.394523,-0.581538" EndPoint="-0.394523,0.52441">
                                            <GradientStop Offset="0" Color="#FFEDCD14" />
                                            <GradientStop Offset="0.641251" Color="#FFE7A60B" />
                                            <GradientStop Offset="1" Color="#FFE17F02" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock
                                    Margin="0,25,0,0"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="22"
                                    FontWeight="Light"
                                    Foreground="#FFFFFFFF"
                                    Text="{Binding Data.GoldMedals}" />
                            </Grid>
                            <Grid>
                                <Rectangle
                                    Width="50"
                                    Height="40"
                                    VerticalAlignment="Bottom"
                                    Stroke="White"
                                    StrokeThickness="0.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0.16066,-0.37931" EndPoint="0.16066,0.55752">
                                            <GradientStop Offset="0" Color="#FFC69C6D" />
                                            <GradientStop Offset="0.640045" Color="#FFA97F53" />
                                            <GradientStop Offset="1" Color="#FF8C6239" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock
                                    Margin="0,75,0,0"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="22"
                                    FontWeight="Light"
                                    Foreground="#FFFFFFFF"
                                    Text="{Binding Data.BronzeMedals}" />
                            </Grid>
                        </StackPanel>
                        <StackPanel
                            Height="40"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="45"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI"
                                FontSize="20"
                                FontWeight="Light"
                                Foreground="Black"
                                Text="Won" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI"
                                FontSize="20"
                                FontWeight="Light"
                                Foreground="Black"
                                Text="{Binding Data.TotalMedals}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI"
                                FontSize="20"
                                FontWeight="Light"
                                Foreground="Black"
                                Text=" Medals" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="10,0,50,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Segoe UI"
            FontSize="30"
            FontWeight="Light"
            Text="US Olympic Medals FY2012" />

        <syncfusion:SfTreeMap
            x:Name="treeMap"
            Grid.Row="1"
            Margin="10"
            ColorValuePath="GoldMedals"
            ItemsSource="{Binding OlympicMedalsDetails}"
            ShowToolTip="False"
            ToolTipTemplate="{StaticResource toolTipTemplate}"
            WeightValuePath="TotalMedals">


            <syncfusion:SfTreeMap.LeafTemplate>
                <DataTemplate>
                    <Border
                        Background="#D73028"
                        BorderBrush="Transparent"
                        BorderThickness="2">
                        <Grid>
                            <TextBlock
                                Padding="5,2,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontFamily="Segoe UI"
                                FontSize="17"
                                FontWeight="Normal"
                                Foreground="White"
                                Text="{Binding Data.GameName}" />
                            <Image
                                Margin="0,16,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="{Binding Data.GameImgSource}"
                                Stretch="None" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </syncfusion:SfTreeMap.LeafTemplate>

        </syncfusion:SfTreeMap>
    </Grid>

</democommon:DemoControl>
